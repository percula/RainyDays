<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/bottom_sheet"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
              android:layout_marginBottom="@dimen/text_margin">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_subheader_height"
            android:layout_marginStart="54dp"
            android:gravity="center_vertical"
            android:text="@string/location_picker_header"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"/>

    <TextView
            android:id="@+id/location_picker_my_location"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_one_item_height_dense"
            android:layout_marginEnd="@dimen/text_margin"
            android:layout_marginStart="@dimen/text_margin"
            android:drawablePadding="@dimen/text_margin"
            android:drawableStart="@drawable/ic_my_location_black_24dp"
            app:drawableTint="?attr/colorControlNormal"
            android:gravity="center_vertical"
            android:text="@string/location_picker_my_location"
            style="@style/TextAppearance.MaterialComponents.Body1"/>

    <TextView
            android:id="@+id/location_picker_map"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_one_item_height_dense"
            android:layout_marginEnd="@dimen/text_margin"
            android:layout_marginStart="@dimen/text_margin"
            android:drawablePadding="@dimen/text_margin"
            android:drawableStart="@drawable/ic_add_location_black_24dp"
            app:drawableTint="?attr/colorControlNormal"
            android:gravity="center_vertical"
            android:text="@string/location_picker_map"
            style="@style/TextAppearance.MaterialComponents.Body1"/>

</LinearLayout>